<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RadioButton
        android:id="@+id/selectServiceRadio"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:enabled="false"
        android:buttonTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/serviceIc"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/icic"
        app:layout_constraintStart_toEndOf="@id/selectServiceRadio"
        app:layout_constraintTop_toTopOf="@id/selectServiceRadio"
        app:layout_constraintBottom_toBottomOf="@id/selectServiceRadio"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Icic Bank"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/serviceIc"
        app:layout_constraintTop_toTopOf="@id/serviceIc"
        app:layout_constraintBottom_toBottomOf="@id/serviceIc"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>