<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_light"
    android:orientation="vertical"
    tools:context="com.digital.payandserve.views.settings.Settings">

    <LinearLayout
        android:id="@+id/toolbarCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/transaction_toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottombar"
        android:layout_below="@id/toolbarCon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.digital.payandserve.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="16.7dp"
                android:layout_marginBottom="16.7dp"
                android:text="@string/general_settings"
                android:textColor="@color/textRed"
                android:textSize="12.7sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_card"
                android:elevation="1dp"
                android:orientation="vertical">

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvManageAppLock"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Manage App Lock"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvPinChange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="TPin Reset"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvPasswordChange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="Change Password"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="9.7dp"
                    android:text="Auto Logout"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvLogoutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10.7dp"
                    android:text="Set app auto logout time"
                    android:textColor="@color/textGray"
                    android:textSize="11.7sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <LinearLayout
                    android:id="@+id/secTheam"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="9.7dp"
                        android:text="App Theam"
                        android:textColor="@color/textBlack"
                        android:textSize="15sp" />

                    <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.7dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="10.7dp"
                        android:text="Configure App theam"
                        android:textColor="@color/textGray"
                        android:textSize="11.7sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

            </LinearLayout>

            <com.digital.payandserve.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="16.7dp"
                android:layout_marginBottom="16.7dp"
                android:text="@string/support"
                android:textColor="@color/textRed"
                android:textSize="12.7sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_card"
                android:elevation="1dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@string/faq"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvContactUS"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@string/contact_us"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />

                <com.digital.payandserve.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/tvAboutUS"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="16.7dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@string/about_us"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_gray" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/app_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/tvAppDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp"
                android:text="Version Code : 6"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="@dimen/_20sdp"/>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottombar"
        android:background="@color/view_gray" />

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="52.6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_card"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Logout"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/primary_stroke_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textColor="@color/textRed"/>
    </LinearLayout>

</RelativeLayout>