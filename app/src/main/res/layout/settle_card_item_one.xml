<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="@dimen/_155sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white_card"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/dash_bottom_wave"
            android:scaleY="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddMoney"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/corner_btn_bg"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="Add Money"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/abel"
            android:text="@string/rupee"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/card_settlement_items_color"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/tvRupee"
            android:fontFamily="@font/abel"
            android:text="0.0 /-"
            android:textColor="@color/card_settlement_items_color"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/tvAmountHolder"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/tvRupee"
            android:orientation="vertical">

            <View
                android:layout_width="135dp"
                android:layout_height="35dp"
                android:background="#AAA"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <TextView
            android:id="@+id/tvLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvAmount"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Wallet Balance"
            android:textColor="@color/card_settlement_items_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@id/tvLbl"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:src="@drawable/settlement_chip_icon" />


        <ImageView
            android:id="@+id/walletLogo"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/payandserve_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Ab Banking Hua Aur Bhi Aasaan!"
            android:textColor="@color/wallet_text_color"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_alignStart="@id/walletLogo"
            android:layout_below="@id/walletLogo"/>

        <ImageView
            android:id="@+id/imgWalletCard"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/finger_print" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>